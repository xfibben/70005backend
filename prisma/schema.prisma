generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @default(autoincrement()) @id
  username String @unique
  password String
  name String
  email String?
}

model Student{
  id Int @default(autoincrement()) @id
  name String
  lastName String
  email String?
  school School? @relation(fields: [schoolId], references: [id])
  schoolId Int?
  qualifications Qualification[]
}

model School{
  id Int @default(autoincrement()) @id
  name String
  address String?
  phone String?
  email String?
  students Student[]
}

model Test{
  id Int @default(autoincrement()) @id
  name String
  time Float
  date DateTime
  qualifications Qualification[]
}

model Qualification{
  id Int @default(autoincrement()) @id
  student Student @relation(fields: [studentId], references: [id])
  studentId Int
  test Test @relation(fields: [testId], references: [id])
  testId Int
  grade Float
}