generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum level {
  Inicial
  Primaria
  Secundaria
}

model User{
  id Int @default(autoincrement()) @id
  username String @unique
  password String
  name String
  email String?
}

model Student{
  id Int @default(autoincrement()) @id
  name String
  lastName String
  email String?
  dni String @unique
  school School @relation(fields: [schoolId], references: [id])
  schoolId Int
  grade Grade? @relation(fields: [gradeId], references: [id])
  gradeId Int
  qualifications Qualification[]
}

model Grade{
  id Int @default(autoincrement()) @id
  grade Float
  level level
  students Student[]
  Test Test[]
}

model School{
  id Int @default(autoincrement()) @id
  name String
  address String?
  phone String?
  email String?
  students Student[]
}

model Test{
  id Int @default(autoincrement()) @id
  name String
  time Float
  date DateTime
  qualifications Qualification[]
  grade Grade @relation(fields: [gradeId], references: [id])
  gradeId Int
}

model Qualification{
  id Int @default(autoincrement()) @id
  student Student @relation(fields: [studentId], references: [id])
  studentId Int
  test Test @relation(fields: [testId], references: [id])
  testId Int
  
}