generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum level {
  Inicial
  Primaria
  Secundaria
}

enum type {
  Privada
  Publica
}

model User{
  id Int @default(autoincrement()) @id
  username String @unique
  password String
  name String
  email String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Student{
  id Int @default(autoincrement()) @id
  name String
  lastName String
  email String?
  dni String @unique
  school School @relation(fields: [schoolId], references: [id])
  schoolId Int
  grade Grade? @relation(fields: [gradeId], references: [id])
  gradeId Int
  qualifications Qualification[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Grade{
  id Int @default(autoincrement()) @id
  grade Float
  level level
  students Student[]
  Test Test[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model School{
  id Int @default(autoincrement()) @id
  name String
  address String?
  phone String?
  email String?
  type type?
  students Student[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Contest{
  id Int @default(autoincrement()) @id
  name String
  date DateTime
  tests Test[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Test{
  id Int @default(autoincrement()) @id
  name String
  time Float?
  date DateTime?
  qualifications Qualification[]
  grade Grade @relation(fields: [gradeId], references: [id])
  gradeId Int
  contest Contest @relation(fields:[contestId], references: [id])
  contestId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Qualification{
  id Int @default(autoincrement()) @id
  student Student @relation(fields: [studentId], references: [id])
  studentId Int
  test Test @relation(fields: [testId], references: [id])
  testId Int
  score Float?
  time Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

