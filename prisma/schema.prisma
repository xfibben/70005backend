generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum level {
  INICIAL
  PRIMARIA
  SECUNDARIA
}

enum grade {
  INICIAL
  PRIMERO
  SEGUNDO
  TERCERO
  CUARTO
  QUINTO
  SEXTO
}

enum type {
  PRIVADA
  PUBLICA
}

enum mode {
  INDEPENDIENTE
  DELEGACION
  INTERNO
  EXTERNO
}

model User{
  id Int @default(autoincrement()) @id
  username String @unique
  password String
  name String
  email String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Student{
  id Int @default(autoincrement()) @id
  name String
  lastName String
  secondName String
  email String?
  dni String @unique
  school School @relation(fields: [schoolId], references: [id])
  schoolId Int
  grade Grade? @relation(fields: [gradeId], references: [id])
  gradeId Int
  mode mode?
  qualifications Qualification[]
  inscriptions Inscription[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Inscription{
  id Int @default(autoincrement()) @id
  ticket String
  quantity Int
  student Student @relation(fields: [studentId], references: [id])
  studentId Int
  test Test @relation(fields:[testId], references: [id])
  testId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Grade{
  id Int @default(autoincrement()) @id
  level level
  grade grade
  students Student[]
  Test Test[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model School{
  id Int @default(autoincrement()) @id
  name String @unique
  address String?
  phone String?
  email String?
  type type?
  students Student[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Contest{
  id Int @default(autoincrement()) @id
  name String
  date String
  tests Test[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Test{
  id Int @default(autoincrement()) @id
  name String
  time String?
  date String?
  qualifications Qualification[]
  grade Grade @relation(fields: [gradeId], references: [id])
  gradeId Int @unique
  contest Contest @relation(fields:[contestId], references: [id])
  contestId Int
  inscriptions Inscription[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Qualification{
  id Int @default(autoincrement()) @id
  student Student @relation(fields: [studentId], references: [id])
  studentId Int
  test Test @relation(fields: [testId], references: [id])
  testId Int
  score Float?
  startingTime String?
  endingTime String?
  time String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

