generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum level {
  Inicial
  Primaria
  Secundaria
}

enum grade {
  Primero
  Segundo
  Tercero
  Cuarto
  Quinto
  Sexto
}

enum type {
  Privada
  Publica
}

model User{
  id Int @default(autoincrement()) @id
  username String @unique
  password String
  name String
  email String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Student{
  id Int @default(autoincrement()) @id
  name String
  lastName String
  secondName String
  email String?
  dni String @unique
  school School @relation(fields: [schoolId], references: [id])
  schoolId Int
  grade Grade? @relation(fields: [gradeId], references: [id])
  gradeId Int
  owned Boolean @default(false)
  qualifications Qualification[]
  inscriptions Inscription[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Inscription{
  id Int @default(autoincrement()) @id
  ticket String
  quantity Int
  student Student @relation(fields: [studentId], references: [id])
  studentId Int
  contest Contest? @relation(fields: [contestId], references: [id])
  contestId Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Grade{
  id Int @default(autoincrement()) @id
  level level
  grade grade
  students Student[]
  school School[]
  Test Test[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model School{
  id Int @default(autoincrement()) @id
  name String @unique
  address String?
  phone String?
  email String?
  type type?
  grade Grade? @relation(fields: [gradeId], references: [id])
  gradeId Int
  students Student[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Contest{
  id Int @default(autoincrement()) @id
  name String
  date String
  tests Test[]
  inscriptions Inscription[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Test{
  id Int @default(autoincrement()) @id
  name String
  time String?
  date String?
  qualifications Qualification[]
  grade Grade @relation(fields: [gradeId], references: [id])
  gradeId Int @unique
  contest Contest @relation(fields:[contestId], references: [id])
  contestId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Qualification{
  id Int @default(autoincrement()) @id
  student Student @relation(fields: [studentId], references: [id])
  studentId Int
  test Test @relation(fields: [testId], references: [id])
  testId Int
  score Float?
  startingTime String?
  endingTime String?
  time String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

